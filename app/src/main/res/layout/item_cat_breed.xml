<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="130dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="24dp"
            android:paddingStart="36dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/cat_breed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textSize="18sp"
                tools:text="Tipo de raza" />

            <TextView
                android:id="@+id/cat_breed_life_span"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textSize="14sp"
                tools:text="Esperanza de vida" />

            <TextView
                android:id="@+id/cat_breed_temperament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textSize="14sp"
                tools:text="Atributo" />

            <TextView
                android:id="@+id/cat_breed_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/location"
                tools:text="Pais" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_breed_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/cat_breed_img"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:contentDescription="Cat Image"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/logo" />
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>